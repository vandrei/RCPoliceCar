<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CarController"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="0dp"
        android:paddingRight="70dp"
        android:rotation="-15"
        android:src="@drawable/indicator"
        android:id="@+id/indicator_imageView"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_horn"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:background="@android:color/transparent"
        android:id="@+id/siren_imageButton"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-50dp"
        android:layout_marginRight="-50dp"
        android:layout_alignLeft="@id/indicator_imageView"
        android:layout_alignRight="@id/indicator_imageView"
        >

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/slower_button"
        android:background="@android:color/transparent"
        />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/faster_button"
        android:background="@android:color/transparent"
        />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_lights"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:background="@android:color/transparent"
        android:id="@+id/headlights_imageButton"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_policelights"
        android:paddingTop="5dp"
        android:paddingRight="7dp"
        android:layout_toLeftOf="@id/headlights_imageButton"
        android:background="@android:color/transparent"
        android:id="@+id/sirenLights_imageButton"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="50dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:src="@drawable/control_up"
            android:background="@android:color/transparent"
            android:id="@+id/upCommand_button"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:layout_height="0dp"
            android:src="@drawable/control_down"
            android:background="@android:color/transparent"
            android:id="@+id/downCommand_button"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:paddingLeft="50dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:paddingRight="0dp"
            android:src="@drawable/control_left"
            android:background="@android:color/transparent"
            android:id="@+id/leftCommand_button"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:paddingLeft="0dp"
            android:src="@drawable/control_right"
            android:background="@android:color/transparent"
            android:id="@+id/rightCommand_button"
            />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bluetooth_signal_0"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="60dp"
        android:paddingLeft="140dp"
        android:id="@+id/signalStrength_imageView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_lights_off"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="100dp"
        android:paddingRight="170dp"
        android:id="@+id/headlightsIndicator_imageView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_policelights_off"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="80dp"
        android:paddingRight="140dp"
        android:id="@+id/policeLightsIndicator_imageView"/>

</RelativeLayout>
